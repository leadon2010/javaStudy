<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TextField?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="300.0" fx:controller="javafx.BorderPaneController">
	<top>
		<ToolBar>
			<items>
				<Button text="OK" fx:id="okBtn" />
				<Button text="Cancel" fx:id="cancelBtn"/>
			</items>
		</ToolBar>
	</top>
	<center>
		<TextArea fx:id="txtDisplay">
		</TextArea>
	</center>
	<bottom>
		<BorderPane >
			<center>
				<TextField fx:id="txtMsg"></TextField>
			</center>
			<right>
				<Button text="Send" fx:id="sendBtn" />
			</right>
		</BorderPane>
	</bottom>
</BorderPane>

